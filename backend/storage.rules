rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload and read avatars
    match /avatars/{allPaths=**} {
      allow read: if true; // Anyone can read avatars
      allow write: if request.auth != null // Only authenticated users can write
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // Allow authenticated users to upload and read chat images
    match /chat_images/{imageId} {
      allow read: if request.auth != null; // Authenticated users can read
      allow write: if request.auth != null // Only authenticated users can write
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // Allow PT users to upload their certificate images
    match /pt_certificates/{ptId}/{fileName} {
      allow read: if request.auth != null; // Authenticated users can read
      allow write: if request.auth != null // Only authenticated users can write
                   && request.resource.size < 10 * 1024 * 1024 // Max 10MB
                   && request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // Allow users to upload and manage their progress photos
    match /progress_photos/{userId}/{fileName} {
      allow read: if request.auth != null; // Authenticated users can read
      allow write: if request.auth != null // Only authenticated users can write
                   && request.auth.uid == userId // Only photo owner can write
                   && request.resource.size < 10 * 1024 * 1024 // Max 10MB
                   && request.resource.contentType.matches('image/.*'); // Only images
      allow delete: if request.auth != null && request.auth.uid == userId; // Only owner can delete
    }
    
    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

