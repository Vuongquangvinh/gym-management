rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read, write: if true;
      
      // Water tracking subcollection
      match /water_tracking/{trackingId} {
        allow read, write: if true;
      }
      
      // Body measurements subcollection
      match /body_measurements/{measurementId} {
        allow read, write: if true;
      }
    }
    
    // Admins collection
    match /admins/{document} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Check-ins collection
    match /checkins/{document=**} {
      allow read, write: if true;
    }
    
    // Spending users collection
    match /spending_users/{document=**} {
      allow read, write: if true;
    }
    
    // Packages collection
    match /packages/{packageId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Employees collection
    match /employees/{employeeId} {
      allow read, write: if true;
    }
    
    // PT Packages collection (support both naming conventions)
    match /ptPackages/{packageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /pt_packages/{packageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Payment Orders collection
    match /payment_orders/{orderCode} {
      allow read: if true;
      allow create, update: if true;
      allow delete: if true;
    }
    
    // Schedule collection
    match /schedule/{document=**} {
      allow read, write: if true;
    }
    
    // Employee Check-ins collection
    match /employee_checkins/{document=**} {
      allow read, write: if true;
    }
    
    // Contracts collection
    match /contracts/{contractId} {
      allow read: if true; 
      allow create: if true; 
      allow update: if true; 
      allow delete: if true; 
    }
    
    // Pending Requests collection
    match /pendingRequests/{document=**} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    // Notifications collection
    match /notifications/{document=**} {
      allow read, write: if true;
    }
   
    // Chats collection
    match /chats/{chatId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      
      match /messages/{messageId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update: if request.auth != null;
      }
    }
    
    // Financial Collections
    match /expenses/{expenseId} {
      allow read, write: if true;
    }
    
    match /expense_categories/{categoryId} {
      allow read, write: if true;
    }
    
    match /salary_configs/{configId} {
      allow read, write: if true;
    }
    
    match /budgets/{budgetId} {
      allow read, write: if true;
    }
    
    match /salary_records/{recordId} {
      allow read: if true;
      allow write: if true;
    }
    
    match /pt_reviews/{reviewId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if true;
    }
    
    // Pending Requests already exists above, no need for ptEditRequests collection
  }
}
