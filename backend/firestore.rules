rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read, write: if true;
      // Production: allow read, write: if request.auth != null;
    }
    
    // Admins collection
    match /admins/{document} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Check-ins collection
    match /checkins/{document=**} {
      allow read, write: if true;
      // Production: allow read, write: if request.auth != null;
    }
    
    // Spending users collection (admin creates users here first)
    match /spending_users/{document=**} {
      allow read, write: if true;
      // Production: allow read, write: if request.auth != null;
    }
    
    // Packages collection - THÊM RULE NÀY
    match /packages/{packageId} {
      allow read: if true; // Cho phép mọi người xem gói tập
      allow write: if true; // Chỉ admin mới được tạo/sửa/xóa gói
      // Production: allow write: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
